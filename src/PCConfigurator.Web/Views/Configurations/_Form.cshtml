<form id="configuration-form" method="post">
    <div class="form-group row">
        <div class="col-sm-2">
            <label for="name">Name: </label>
        </div>

        <div class="col-sm-4">
            <input id="name" type="text" class="form-control" />
        </div>

    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label>Type</label>
        </div>

        <div class="col-sm-2">
            <label>Component</label>
        </div>

        <div class="col-sm-2">
            <label>Single Unit Price</label>
        </div>

        <div class="col-sm-2">
            <label>Quantity</label>
        </div>

        <div class="col-sm-2">
            <label>All units price </label>
        </div>
    </div>

    <div id="components-box">

    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label>Configuration price:</label>
        </div>

        <div class="col-sm-2">
            <span id="total-price">0</span>
        </div>
    </div>

    <button id="add-component-btn" type="button" class="btn btn-success">Add component</button>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>