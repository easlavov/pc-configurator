
@{
    ViewData["Title"] = "AddComponent";
}

@model AddComponentViewModel

<h1>Add Component</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <div>
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "badge badge-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SelectedComponentTypeId)
        @Html.DropDownListFor(x => x.SelectedComponentTypeId, Model.ComponentTypes, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Price)
        @Html.EditorFor(x => x.Price, new { htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @class = "form-control" }})
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>