
@{
    ViewData["Title"] = "AddComponent";
}

@model AddComponentViewModel

<h1>Add Component</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter component name" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="component-type">Component Type:</label>
        <select id="component-type" class="form-control" asp-for="SelectedComponentTypeId" asp-items="Model.ComponentTypes"></select>
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" min="0" class="form-control" id="price" name="price" asp-for="Price">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>