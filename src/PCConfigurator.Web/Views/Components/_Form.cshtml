@using PCConfigurator.Web.Models.View
@model AddComponentViewModel

<form method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <div>
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "badge badge-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SelectedComponentTypeId)
        @Html.DropDownListFor(x => x.SelectedComponentTypeId, Model.ComponentTypes, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Price)
        @Html.EditorFor(x => x.Price, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = 0, @class = "form-control" } })
        <div>
            @Html.ValidationMessageFor(x => x.Price, null, new { @class = "badge badge-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>